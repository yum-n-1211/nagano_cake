<h2  class="leftcolor-pink">会員情報編集
<style type="text/css">
  .leftcolor-pink{
  padding-left: 10px ;
  border-left-width: 5px ;
  border-left-style: solid ;
  border-left-color: #fa8072;
  color: gray;
  }
</style>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

<table class="table table-sm">
  <tbody class="table table-borderless">
    <tr>
      <div class="field">
        <th style="width :20%"><%= f.label :"名前" %></th>
        <td style="width :10%">（姓）</td>
        <td style="width :30%"><%= f.text_field :last_name, class:"form-control w20" %></td>
        <td style="width :10%">（名）</td>
        <td style="width :30%"><%= f.text_field :first_name, class:"form-control w20" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label "フリガナ" %></th>
        <td>（セイ）</td>
        <td><%= f.text_field :last_name_kana, class:"form-control w20" %></td>
        <td>（メイ）</td>
        <td><%= f.text_field :first_name_kana, class:"form-control w20" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label "メールアドレス" %></th>
        <td></td>
        <td><%= f.email_field :email, autocomplete: "email", class:"form-control w20" %></td>
      </div>
    </tr>
    <tr>
      <div class="feild">
        <th><%= f.label "郵便番号（ハイフンなし）" %></th>
        <td></td>
        <td><%= f.text_field :postal_code, class:"form-control w20" %></td>
      </div>
    </tr>
    <tr>
      <div class="feild">
        <th><%= f.label "住所" %></th>
        <td></td>
        <td><%= f.text_field :address, class:"form-control w80" %></td>
      </div>
    </tr>
    <tr>
      <div class="feild">
        <th><%= f.label "電話番号（ハイフンなし）" %></th>
        <td></td>
        <td><%= f.text_field :telephone_number, class:"form-control w20" %></td>
      </div>
    </tr>
    <tr>
      <th></th>
      <td></td>
      <td>
        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %><%= link_to '退会する', '/customers/unsubscribe', class: "btn btn-primary" %>
        </div>
      </td>
    </tr>
  </tbody>
</table>
<% end %>
