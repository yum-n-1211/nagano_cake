<h2 class="btn btn-secondary btn-lg mb-5"><%= @customer.full_name %>さんの会員詳細</h2>

<table class="table table-borderless">
  <tbody>
    <tr>
      <th style="width: 15%">会員ID</th>
      <th style="width: 40%"><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= @customer.last_name %> <%= @customer.first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <th>
        <% if @customer.is_active == true %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-muted">無効</p>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>

<div class="text-center">
  <%= link_to '編集する',edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
  <%= link_to '注文履歴一覧を見る',admin_customers_path, class: "btn btn-info" %>
</div>