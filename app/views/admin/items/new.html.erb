<h2>商品新規登録</h2>

<table>
  <tbody>
    <%= form_with model: Item.new, local: true do |f| %>
    <tr>
      <th>商品画像</th>
      <th><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></th>
    </tr>
    <tr>
      <th>商品名</th>
      <th><%= f.text_field :name %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= f.text_area :introduction %></th>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
    <tr>
      <th>税抜価格</th>
      <th></th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th></th>
    </tr>
    <tr>
      <th></th>
      <th><%= f.submit '新規登録' %></th>
    </tr>
    <% end %>
  </tbody>
  
  
</table>
