<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>

<h2>ジャンル一覧・追加</h2>

  <%= form_with model: Genre.new, url: admin_genres_path, local: true do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
  <% end %>

  <table>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
  </table>
